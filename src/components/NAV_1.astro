<script is:inline>

    function onHover() {
        document.getElementById('hoverLink').textContent = 'About';
    }

    function onMouseOut() {
        document.getElementById('hoverLink').textContent = 'Matteo Postinghel';
    }

    function toggleAbout() {
        const aboutSection = document.getElementById('about');
        aboutSection.classList.toggle('hidden');
    }

    function toggleContact() {
        const contactSection = document.getElementById('contact');
        contactSection.classList.toggle('hidden');
    }

    document.getElementById('toggleAbout').addEventListener('click', function(e) {
        e.preventDefault();
        toggleAbout();
    });

    document.getElementById('toggleContact').addEventListener('click', function(e) {
        e.preventDefault();
        toggleContact();
    });

    document.addEventListener("DOMContentLoaded", function() {
        const itButton = document.querySelector('.it-button');
        const enButton = document.querySelector('.en-button');

        itButton.addEventListener("click", function() {
            toggleLanguage('it', 'en', itButton, enButton);
        });

        enButton.addEventListener("click", function() {
            toggleLanguage('en', 'it', enButton, itButton);
        });

        toggleLanguage('it', 'en', itButton, enButton);
    });

    function toggleLanguage(showClass, hideClass, activeButton, inactiveButton) {
        const showElements = document.querySelectorAll(`.${showClass}`);
        const hideElements = document.querySelectorAll(`.${hideClass}`);

        showElements.forEach(element => {
            element.style.display = 'block';
        });

        hideElements.forEach(element => {
            element.style.display = 'none';
        });

        activeButton.style.opacity = '1';
        inactiveButton.style.opacity = '0.5';
    }
</script>

